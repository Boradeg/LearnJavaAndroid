<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizFragment.QuizStartActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/gredient3"
            android:id="@+id/tool_layout3"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="50dp"
                android:layout_alignParentLeft="true"
                android:layout_height="50dp"
                android:src="@drawable/java" />

            <TextView
                android:id="@+id/locationName"
                android:layout_width="wrap_content"
                android:visibility="visible"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_toRightOf="@+id/icon"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="Java Tutorial"
                android:textColor="@color/white"
                android:textSize="20sp" />


            <ImageView
                android:id="@+id/changeLanguageButton"
                android:layout_width="50dp"
                android:layout_alignParentRight="true"
                android:layout_height="50dp"
                android:src="@drawable/user" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/tool_layout3"
            android:layout_marginHorizontal="20dp"
            android:layout_height="match_parent">
            <View
                android:layout_width="2dp"
                android:id="@+id/view20"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                />
            <RelativeLayout
                android:id="@+id/layout_expert_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/view20"
                android:elevation="23dp"
                android:layout_marginHorizontal="10dp"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/gredint_left">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    />

                <TextView
                    android:id="@+id/que_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text1"
                    android:layout_marginStart="10dp"
                    android:text="1/25"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_expert_card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/view20"
                android:elevation="23dp"
                android:layout_marginStart="10dp"
                android:padding="10dp"

                android:layout_marginTop="20dp"
                android:background="@drawable/gredient_right">

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Level"
                    android:layout_marginEnd="10dp"

                    android:textColor="@color/white"
                    android:textAlignment="viewEnd"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/que_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/text2"
                    android:text="Expert"
                    android:textAlignment="viewEnd"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_expert_card5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/layout_expert_card"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/bgcard"
                android:elevation="23dp"
                >

                <TextView
                    android:id="@+id/que"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="13dp"
                    android:text="Que : Why is multiple inheritance not supported in java Why is multiple inheritance not supported in java Why is multiple inheritance not supported in java Why is multiple inheritance not supported in java Why is multiple inheritance not supported in java Why is multiple inheritance not supported in java ?"
                    android:textColor="@color/black10"
                    android:textSize="17dp" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_option"
                android:layout_below="@+id/layout_expert_card5"
                tools:ignore="NotSibling">

                <TextView
                    android:id="@+id/tv_DLevel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Options"
                    android:textSize="20dp"
                    android:textColor="@color/start_color"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/start_color"
                    android:layout_toLeftOf="@+id/tv_DLevel2"
                    android:layout_marginHorizontal="10dp"
                    android:layout_centerVertical="true"/>

                <View
                    android:id="@+id/view9"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/start_color"
                    android:layout_toRightOf="@+id/tv_DLevel2"
                    android:layout_marginHorizontal="10dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/option1"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:elevation="23dp"
                android:layout_below="@+id/layout_option"
                android:layout_marginTop="30dp"
                android:background="@drawable/bgcard">

                <TextView
                    android:id="@+id/op1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="13dp"
                    android:text="Compilation fails"
                    android:textColor="@color/black10"
                    android:textSize="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="23dp"
                android:layout_below="@+id/option1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bgcard">

                <TextView
                    android:id="@+id/op2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="13dp"
                    android:text="bar done"
                    android:textColor="@color/black10"
                    android:textSize="15dp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="23dp"
                android:layout_marginHorizontal="10dp"
                android:layout_below="@+id/option2"
                android:layout_marginTop="20dp"
                android:background="@drawable/bgcard">

                <TextView
                    android:id="@+id/op3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="13dp"
                    android:text="foo done"
                    android:textColor="@color/black10"
                    android:textSize="15dp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="23dp"
                android:layout_below="@+id/option3"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="200dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/bgcard">

                <TextView
                    android:id="@+id/op4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="13dp"
                    android:text="bar"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black10"
                    android:textSize="15dp"
                 />

            </RelativeLayout>



        </RelativeLayout>


    </RelativeLayout>

</ScrollView>