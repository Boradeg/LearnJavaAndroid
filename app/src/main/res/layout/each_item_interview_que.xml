<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:backgroundTint="@color/white"
        android:elevation="23dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
         android:id="@+id/constraintLayout"
        android:background="@drawable/bgcard"
        >

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:text="Why is multiple inheritance not supported in java ?"
        android:textColor="@color/blue10_que"
        android:textSize="15dp"
       />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTv"
            android:id="@+id/langDesc"
            android:fontFamily="@font/roboto_medium"
            android:layout_margin="10dp"
            android:textSize="12dp"
            android:textColor="@color/black10"
            android:text="java is a general-purpose, high-level multi-paradigm programming language. C# encompasses static typing, strong typing, lexically scoped, imperative, declarative, functional, generic, object-oriented, and component-oriented programming disciplines."
            />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView2"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:lottie_autoPlay="false"
        android:layout_alignParentRight="true"
        app:lottie_rawRes="@raw/anim" />

    </RelativeLayout>

